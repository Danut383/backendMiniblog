generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int       @id @default(autoincrement())
  email    String    @unique
  password String
  name     String
  reviews  Review[]
  comments Comment[]
}

model Review {
  id         Int       @id @default(autoincrement())
  title      String
  content    String
  rating     Int
  posterPath String?
  movieId    Int
  movieTitle String? // <-- Agregado aquÃ­
  userId     Int
  user       User      @relation(fields: [userId], references: [id])
  comments   Comment[]
}

model Comment {
  id       Int    @id @default(autoincrement())
  content  String
  reviewId Int
  userId   Int?
  review   Review @relation(fields: [reviewId], references: [id])
  user     User?  @relation(fields: [userId], references: [id])
}
